<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newback"
    tools:context="com.example.gerardodwyer.ps4collection.MainActivity" >


    <TextView
        android:id="@+id/textViewDisclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="46dp"
        android:text="The information in this app that relates to sony interactive entertainment LLC and sony interactive entertainment America LLC (SIEA) all information and rights are reserved
this app is only to work as free promotion and display available games for the PS4 system this
is third party app and is not affiliated with any sony projects or subsiduarys.  "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/disclaimer2" />
</android.widget.RelativeLayout>